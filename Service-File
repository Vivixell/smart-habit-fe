[Unit]
Description=Smart Habit Frontend
After=network.target

[Service]
User=ovrobin
WorkingDirectory=/home/ovrobin/smart-habit-fe/growtrack
# Run build on start (in case updated), then start app
ExecStart=/usr/bin/bash -lc "npm install --no-audit --no-fund && npm run build && PORT=3010 HOST=127.0.0.1 npm start"
# Keep service alive
Restart=always
RestartSec=5
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
